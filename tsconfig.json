{
  "compilerOptions": {
    "target": "ES6", // Necess√°rio para suportar decoradores
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true, // Habilita suporte a decoradores
    "emitDecoratorMetadata": true, // Emite metadados para decoradores
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}